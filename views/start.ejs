<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Start Quiz</title>
  <link rel="stylesheet" href="/styles/main.css">
  <script>
    // Client-side validation before form submission
    function validateQuestions() {
      const totalQuestionsInput = document.getElementById("totalQuestions");
      const totalQuestions = parseInt(totalQuestionsInput.value, 10);

      if (totalQuestions > 36) {
        alert("You cannot attempt more than 36 questions. The quiz will be limited to 36 questions.");
        totalQuestionsInput.value = 36; // Set the number of questions to 36 if the input is greater
      }
    }
  </script>
</head>
<body>
  <form class="container" action="/start" method="post" onsubmit="validateQuestions()">
    <h1>Welcome to the Capital City Quiz!</h1>
    <div class="answer-container">
      <label for="totalQuestions">How many questions do you want to attempt?</label>
      <input type="number" name="totalQuestions" id="totalQuestions" required min="1">
    </div>
    <button type="submit">Start Quiz</button>
  </form>
</body>
</html>
